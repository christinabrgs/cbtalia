---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Projects';
const description = 'A showcase of my recent work in web development, mobile apps, and design.';
const permalink = `${Astro.site.href}projects`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="projects">
  <div class="container">
    <h1>Current Projects</h1>
    <h2>A showcase of my recent work in web development, mobile apps, and design</h2>
    <div class="projects-list">
      <div class="project-item">
        <h3><a href="/EXPLORE.pdf" target="_blank" rel="noopener">Explore PIT</a></h3>
        <p>Web Development, Design, Branding</p>
      </div>
      <div class="project-item">
        <h3><a href="/COACH.pdf" target="_blank" rel="noopener">Coached</a></h3>
        <p>ReactNative Mobile App with Google Firebase, UI Design</p>
      </div>
      <div class="project-item">
        <h3><a href="https://demo-day-vhdj.onrender.com/" target="_blank" rel="noopener">Workout AI App</a></h3>
        <p>Fullstack App - Open AI, JS, Node, Tailwind CSS</p>
      </div>
      <div class="project-item">
        <h3><a href="https://community-catalyst-z5za.onrender.com/" target="_blank" rel="noopener">Community Catalyst</a></h3>
        <p>Fullstack App - JS, Node</p>
      </div>
      <div class="project-item">
        <h3><a href="https://www.figma.com/design/G389jkPP6MbCHy0YCvUiFG/VNT?node-id=0-1" target="_blank" rel="noopener">VNT</a></h3>
        <p>Mobile App Design</p>
      </div>
      <div class="project-item">
        <h3><a href="https://www.figma.com/design/b58rE33Gavzzfulf1znnpJ/Yoga-App?node-id=0-1" target="_blank" rel="noopener">Grounded</a></h3>
        <p>Mobile App Design</p>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 70em;
  }
  h1 {
    margin: 1em 0 .5em 0;
  }
  h2 {
    margin: 0 0 2em 0;
  }
  .about-image {
    float: right;
    margin: -3em -7em 2em 2em;
    max-width: 300px;
  }

  .about-image img {
    border-radius: 8px;
    margin-bottom: 1.5em;
  }

  @media (max-width: 1020px) {
    .about-image {
      float: none;
      margin: 0 auto 2em;
    }
  }

  .projects-list {
    margin-top: 2em;
  }

  .project-item {
    padding-bottom: 2em;
  }

  .project-item:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .project-item h3 {
    margin-bottom: 0.5em;
  }

  .project-item h3 a {
    color: var(--header-highlight);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .project-item h3 a:hover {
    color: #007acc;
  }

  .project-item p {
    line-height: 1.6;
    color: var(--card-para);
  }
</style>
