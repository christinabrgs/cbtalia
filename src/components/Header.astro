---
import Logo from './Logo.astro'
import Nav from './Nav.astro'

const { current = '' } = Astro.props;
---

<style>
  header {
    display: flex;
    margin: 0 auto;
    max-width: 1400px;
    padding: 2em;
    width: 100%;
    box-sizing: border-box;
  }

  @media screen and (max-width: 800px) {
    header {
      padding: 1em;
      max-width: none;
      width: 100%;
    }
  }

  @media screen and (max-width: 520px) {
    header {
      padding: 1em 0;
    }
  }
</style>

<header>
  <Logo />
  <Nav current={current} />
</header>
